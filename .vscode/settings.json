{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "[justfile]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "files.exclude": {
    "node_modules": false,
    ".archive": false,
    "**/.env": false,
    "**/*.key": true,
    "**/*.pem": true
  },
  "search.exclude": {
    "node_modules": true,
    ".archive": true,
    "**/.env": true,
    "**/*.key": true,
    "**/*.pem": true
  }
}
