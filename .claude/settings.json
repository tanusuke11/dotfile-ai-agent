  "hooks": {
    "SessionStart": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${PWD}/.claude/hooks/on_session_start.sh \"$CLAUDE_TOOL_OUTPUT\" \"$CLAUDE_FILE_PATHS\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${PWD}/.claude/hooks/on_test_failure.sh \"$CLAUDE_TOOL_OUTPUT\" \"$CLAUDE_FILE_PATHS\"",
            "timeout": 30
          }
        ]
      }
    ]
